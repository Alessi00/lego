{
  "name": "lego-webapp",
  "version": "0.0.1",
  "description": "Abakus",
  "main": "index.js",
  "author": "webkom",
  "license": "MIT",
  "scripts": {
    "watch-js": "watchify src/index.js -d -o public/app.js -v",
    "watch-css": "stylus --use nib -w assets/stylesheets/style.styl -o public/app.css",
    "watch": "npm run watch-js & npm run watch-css & npm run start",
    "start": "nodemon --exec npm run 6to5-node -- server.js",
    "test": "jest",
    "lint": "jsxhint src/ && jscs src/ --esnext; true",
    "6to5-node": "6to5-node --experimental --modules=common"
  },
  "repository": {
    "type": "git",
    "url": "github.com/webkom/lego-webapp"
  },
  "devDependencies": {
    "6to5": "^3.5.3",
    "6to5ify": "^4.1.0",
    "browserify": "^8.1.3",
    "esprima-fb": "^12001.1.0-dev-harmony-fb",
    "jest-cli": "^0.2.2",
    "jscs": "^1.11.2",
    "jsxhint": "^0.9.0",
    "nib": "^1.1.0",
    "nodemon": "^1.3.6",
    "stylus": "^0.50.0",
    "uglify-js": "^2.4.16",
    "watchify": "^2.3.0"
  },
  "dependencies": {
    "react": "^0.12.2",
    "react-router": "^0.11.6",
    "react-a11y": "0.0.5",
    "superagent": "^0.21.0",
    "object-assign": "^2.0.0",
    "flux": "^2.0.1",
    "express": "^4.11.2",
    "debounce": "^1.0.0",
    "moment": "^2.9.0"
  },
  "browserify": {
    "transform": [
      [
        "6to5ify",
        {
          "modules": "common"
        }
      ]
    ]
  },
  "jscsConfig": {
    "preset": "airbnb",
    "excludeFiles": [
      "node_modules/**",
      "coverage/**",
      "public/libs/**"
    ],
    "esprima": "esprima-fb",
    "validateIndentation": 2,
    "disallowMultipleVarDecl": true,
    "requireMultipleVarDecl": null,
    "disallowQuotedKeysInObjects": null,
    "safeContextKeyword": [
      "self"
    ],
    "requireCamelCaseOrUpperCaseIdentifiers": "ignoreProperties"
  },
  "jshintConfig": {
    "globalstrict": false,
    "browserify": true,
    "esnext": true,
    "devel": true,
    "expr": true
  }
}
