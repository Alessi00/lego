{
  "name": "lego-webapp",
  "version": "0.0.1",
  "description": "Abakus",
  "main": "index.js",
  "author": "webkom",
  "license": "MIT",
  "scripts": {
    "start": "node webpack/server",
    "build": "NODE_ENV=production webpack --config webpack/webpack.config.babel.js",
    "test": "jest",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "lint": "npm run lint:js",
    "lint:js": "eslint app --ignore-path .gitignore",
    "lint:css": "stylelint ./app/**/*.css",
    "flow": "flow"
  },
  "repository": {
    "type": "git",
    "url": "github.com/webkom/lego-webapp"
  },
  "dependencies": {
    "animate.css": "3.5.2",
    "camelize": "1.0.0",
    "classnames": "2.2.5",
    "history": "4.2.0",
    "isomorphic-fetch": "2.2.1",
    "jwt-decode": "2.1.0",
    "lodash": "4.16.1",
    "marked": "0.3.6",
    "moment": "2.15.1",
    "moment-timezone": "0.5.5",
    "normalize.css": "4.2.0",
    "normalizr": "2.2.1",
    "postcss-cssnext": "2.8.0",
    "postcss-import": "8.1.0",
    "postcss-nested": "1.0.0",
    "react": "15.3.2",
    "react-addons-css-transition-group": "15.3.2",
    "react-dom": "15.3.2",
    "react-notification": "5.0.3",
    "react-overlays": "0.6.6",
    "react-redux": "4.4.5",
    "react-router": "2.8.1",
    "react-router-redux": "4.0.5",
    "react-treeview": "0.4.5",
    "redux": "3.6.0",
    "redux-form": "~4.2.2",
    "redux-logger": "2.6.1",
    "redux-thunk": "2.1.0",
    "reselect": "2.5.4",
    "sinon": "1.17.5"
  },
  "devDependencies": {
    "babel-core": "6.14.0",
    "babel-eslint": "6.1.2",
    "babel-jest": "15.0.0",
    "babel-loader": "6.2.5",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-polyfill": "6.13.0",
    "babel-preset-es2015": "6.14.0",
    "babel-preset-react": "6.11.1",
    "babel-preset-stage-0": "6.5.0",
    "chalk": "1.1.3",
    "css-loader": "0.25.0",
    "enzyme": "2.4.1",
    "eslint": "2.7.0",
    "eslint-config-airbnb": "6.2.0",
    "eslint-config-webkom": "1.4.0",
    "eslint-plugin-react": "4.3.0",
    "express": "4.14.0",
    "file-loader": "0.9.0",
    "flow-bin": "0.32.0",
    "html-webpack-plugin": "2.22.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "15.1.1",
    "json-loader": "0.5.4",
    "null-loader": "0.1.1",
    "object-assign": "4.1.0",
    "postcss-loader": "0.13.0",
    "react-addons-test-utils": "15.3.2",
    "react-hot-loader": "3.0.0-beta.4",
    "react-test-renderer": "15.3.2",
    "redux-mock-store": "1.2.0",
    "sinon": "1.17.6",
    "style-loader": "0.13.1",
    "stylelint": "7.3.1",
    "stylelint-config-standard": "13.0.1",
    "url-loader": "0.5.7",
    "webpack": "2.1.0-beta.25",
    "webpack-dev-middleware": "1.8.1",
    "webpack-hot-middleware": "2.12.2"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "color-hex-case": null,
      "string-quotes": "single",
      "indentation": 2,
      "custom-property-empty-line-before": null,
      "property-no-unknown": null,
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "jest": {
    "globals": {
      "__DEV__": false
    },
    "moduleDirectories": [
      "<rootDir>",
      "node_modules"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm)$": "<rootDir>/testing/FileStub.js",
      "^.+\\.css$": "<rootDir>/testing/CSSStub.js"
    },
    "testRegex": "\\.spec\\.(js|jsx)$"
  }
}
