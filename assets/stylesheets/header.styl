header
  background #222
  height 80px
  line-height @height
  color #eee
  padding 0 20px

  ul
    display table
    table-layout fixed
    width 100%

  .logo
    width 160px
    a
      display inline-block
      background url('images/logo.png') 20px center no-repeat
      background-size 100px 20px
      color transparent
      width 100%

  .partner-logo
    width 180px

    a
      display inline-block
      width 100%
      background url('http://open.bekk.no/Content/Images/BEKK_logo.svgz') center center no-repeat
      color transparent

  li
    display table-cell
    line-height 80px

  .search-box
    width 400px

.search-container
  width 100%

.search
  input
    font-size 20px
    height 40px
    padding 0 20px
    border 0
    background #333
    color #fff
    border-radius 5px
    width 100%
    display inline

    &:focus
      outline none

.search-results
  background rgba(20, 20, 20, .9)
  position relative
  display block
  padding 20px
  opacity 1

  &.hidden
    padding 0
    opacity 0

  ul
    display block

  li
    display block
    line-height 1.8
    padding 10px

    &:hover
      background black


.gravatar
  width 32px
  height @width
  border-radius (@width/2)
  display inline
  vertical-align middle
  margin-right 10px
  

@media all and (max-width: 500px)
  header
    height auto
    line-height inherit
    
    .search-box
      width 100%
      
    .partner-logo
      display none
    
  header ul, header ul li
    display block
