.feed
  li
    padding 5px 0


    &.notification-item
      background rgba(255, 255, 255, .9)
      border-right 4px solid #ccc
      padding-left 10px
      margin 5px 0

h2.inside-feed
  color #bbb
  text-transform uppercase
  font-size 18px
  margin 20px 0
  text-align center

  &:after, &:before
    content '~'

h3
  font-size 24px
  font-weight 700
  margin 10px 0
  color #222

.event-timeline
  display flex
  margin 40px 0
  
  .event-timeline-item
    text-align center
    border-bottom 4px solid #ddd
    padding 5px
    background #fff
    flex 1 1 23%
    margin 0 1%
    
    img
      max-width 100%
      margin-top 10px
      
  a
    text-decoration none

.event-time-location
  color #fff
  background #EDC943
  font-size 14px
  text-transform uppercase
  font-weight 700
  padding 2px 10px

.feed-event-description
  padding 10px 20px
  font-size 14px

  h3
    font-size 18px
    margin 0

  button, .button
    cursor pointer
    background linear-gradient(#eee, #ddd)
    color #333
    border 0
    border-radius 4px
    font-size 14px
    font-weight 700
    padding 8px 14px
    box-shadow 0 0 1px #999
    outline none

    &:hover
      box-shadow 0 0 1px #333
      background linear-gradient(#eee, #ccc)


  &:first-letter
    text-transform capitalize


.event-grid
  display flex
  flex-wrap wrap
  
  h3
    font-size 16px
    margin 0

  .feed-event-box
    padding 20px
    display block
    background transparent
    border-right 0
    flex 0 0 100%
    color #444
    text-decoration none
    
.sidebar
  display block
  float right
  width 300px

  h2
    font-size 16px
    text-transform uppercase
    margin 0
    color #777
    text-align left
    margin-left 20px

  .sidebar-block-content
    background #fff
    padding 20px
    margin-bottom 10px

    img
      width 150px
      margin 0 auto
      display block

  ul li a
    display block

  .fa-star
    color #EDC943
    margin-right 10px


@media all and (max-width: 800px)
  .sidebar
    display none


@media all and (max-width: 500px)
  .event-grid .feed-event-box
    width 100%
    height auto
    
  .event-timeline
    flex-direction column
    
    .event-timeline-item
      width 100%
