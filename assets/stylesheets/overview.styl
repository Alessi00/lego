.feed
  li
    padding 5px 0


    &.notification-item
      background rgba(255, 255, 255, .9)
      border-right 4px solid #ccc
      padding-left 10px
      margin 5px 0

.feed-container h2
  color #bbb
  text-transform uppercase
  font-size 18px
  margin 20px 0
  text-align center

  &:after, &:before
    content '~'


h3
  font-size 24px
  font-weight 700
  margin 10px 0
  color #222

.event-timeline
  display flex

  .feed-event-box
    text-align center
    border-bottom 4px solid #ddd
    padding 5px
    width auto
    flex 1
  
.feed-event-box
  background #fff
  display inline-block
  width 48%
  margin 0 1% 10px 1%
  color #444

  img
    height 90px
    margin-top 10px

.event-time-location
  color #fff
  background #EDC943
  font-size 14px
  text-transform uppercase
  font-weight 700

.feed-event-description
  padding 10px 20px
  font-size 14px

  h3
    font-size 18px
    margin 0

  button, .button
    cursor pointer
    background linear-gradient(#eee, #ddd)
    color #333
    border 0
    border-radius 4px
    font-size 14px
    font-weight 700
    padding 8px 14px
    box-shadow 0 0 1px #999
    outline none

    &:hover
      box-shadow 0 0 1px #333
      background linear-gradient(#eee, #ccc)


  &:first-letter
    text-transform capitalize


.event-grid
  clearfix()
  h3
    font-size 16px
    margin 0

  .feed-event-box
    float left
    padding 20px
    display block
    background transparent
    border-right 0
    height 300px

    &:nth-child(even)
      float right
      

@media all and (max-width: 500px)
  .event-grid .feed-event-box
    width 100%
    height auto
    
  .event-timeline
    flex-direction column
    
    .feed-event-box
      width 100%
