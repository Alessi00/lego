.login-form
  background rgba(68, 68, 68, .9)
  position relative
  display block
  padding 20px
  left 120px
  opacity 1
  transform translateY(0)
  transition all .6s ease
  width 250px

  &.hidden
    transform translateY(-180px)
    opacity 0

  input, button
    display block
    font-size 16px
    border 0
    width 100%
    padding 10px
    cursor pointer
    margin-bottom 5px

  button
    margin 10px 0 0 0
    background linear-gradient(#eee, #ccc)

  input
    &:focus
      outline none
      background #FAFFBD

.login-status
  background #222
  z-index 100
  position relative

.login-button
  //background darken(#c0392b, 10%)
  color #eee
  display inline
  padding 5px 15px
  font-weight 700
  text-transform uppercase

  i
    color #777
    margin-right 5px
